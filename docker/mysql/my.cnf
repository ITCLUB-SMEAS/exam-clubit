# ==========================================================================
# MySQL 9.x Security Configuration
# ==========================================================================

[mysqld]
# ==========================================================================
# Basic Settings
# ==========================================================================
user = mysql
pid-file = /var/run/mysqld/mysqld.pid
socket = /var/run/mysqld/mysqld.sock
datadir = /var/lib/mysql
bind-address = 0.0.0.0
port = 3306

# ==========================================================================
# Character Set
# ==========================================================================
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4'

# ==========================================================================
# Security Settings
# ==========================================================================
# Disable symbolic links
symbolic-links = 0

# Disable local infile (prevent file reading attacks)
local-infile = 0

# Secure file operations
secure-file-priv = /var/lib/mysql-files

# Disable LOAD DATA LOCAL
local_infile = OFF

# Skip name resolution (security + performance)
skip-name-resolve = 1

# Disable show database for non-privileged users
skip-show-database

# Authentication
default_authentication_plugin = caching_sha2_password

# Password validation (requires validate_password component)
# Install with: INSTALL COMPONENT 'file://component_validate_password';
# validate_password.policy = MEDIUM
# validate_password.length = 12
# validate_password.mixed_case_count = 1
# validate_password.number_count = 1
# validate_password.special_char_count = 1

# Connection security
require_secure_transport = OFF

# ==========================================================================
# Connection Settings
# ==========================================================================
max_connections = 200
max_connect_errors = 10
wait_timeout = 600
interactive_timeout = 600
connect_timeout = 10

# ==========================================================================
# Buffer & Cache Settings
# ==========================================================================
key_buffer_size = 256M
max_allowed_packet = 64M
thread_stack = 256K
thread_cache_size = 8
sort_buffer_size = 4M
read_buffer_size = 4M
read_rnd_buffer_size = 8M
join_buffer_size = 8M

# ==========================================================================
# InnoDB Settings
# ==========================================================================
innodb_buffer_pool_size = 512M
innodb_buffer_pool_instances = 4
innodb_log_file_size = 128M
innodb_log_buffer_size = 16M
innodb_file_per_table = 1
innodb_flush_log_at_trx_commit = 1
innodb_flush_method = O_DIRECT
innodb_lock_wait_timeout = 50
innodb_strict_mode = 1

# ==========================================================================
# Query Cache (Disabled in MySQL 8+)
# ==========================================================================
# query_cache_type = 0
# query_cache_size = 0

# ==========================================================================
# Logging
# ==========================================================================
log_error = /var/log/mysql/error.log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2
log_queries_not_using_indexes = 1

# General query log (disable in production)
general_log = 0

# Binary logging (for replication/backup)
log_bin = /var/lib/mysql/mysql-bin
binlog_expire_logs_seconds = 604800
max_binlog_size = 100M
binlog_format = ROW

# ==========================================================================
# Temporary Tables
# ==========================================================================
tmp_table_size = 64M
max_heap_table_size = 64M

# ==========================================================================
# Performance Schema
# ==========================================================================
performance_schema = ON

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
port = 3306
socket = /var/run/mysqld/mysqld.sock
